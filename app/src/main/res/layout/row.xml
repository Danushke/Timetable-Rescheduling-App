<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:layout_gravity="center">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp">



            <TextView
                android:id="@+id/day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Day"
                android:layout_marginRight="40dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/textViewday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="25dp"
                android:text="Monday"
                android:layout_toRightOf="@id/day"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:layout_gravity="center"/>


            <TextView
                android:id="@+id/ICT1301"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/day"
                android:paddingRight="13dp"
                android:text="8.00-9.00"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

            <TextView
                android:id="@+id/textViewict1301"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_below="@id/textViewday"
                android:layout_toRightOf="@id/ICT1301"
                android:paddingLeft="25dp"
                android:text="Apple MacBook Air "
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

            <TextView
                android:id="@+id/ICT1302"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ICT1301"
                android:layout_marginTop="5dp"
                android:paddingRight="13dp"
                android:text="9.00-10.00"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

            <TextView
                android:id="@+id/textViewict1302"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewict1301"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/ICT1302"
                android:paddingLeft="25dp"
                android:text="13.3 Inch, 256 GB"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

            <TextView
                android:id="@+id/ICT1303"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ICT1302"
                android:layout_marginTop="5dp"
                android:paddingRight="13dp"
                android:text="10.00-11.00"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />


            <TextView
                android:id="@+id/textViewict1303"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewict1302"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/ICT1303"
                android:paddingLeft="25dp"
                android:paddingRight="5dp"
                android:text="4.7"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

            <TextView
                android:id="@+id/CMT1301"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ICT1303"
                android:layout_marginTop="5dp"
                android:text="11.00-12.00"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />


            <TextView
                android:id="@+id/textViewcmt1301"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewict1303"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/CMT1301"
                android:paddingLeft="25dp"
                android:text="INR 56990"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

            <TextView
                android:id="@+id/CMT1302"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/CMT1301"
                android:layout_marginTop="5dp"
                android:text="12.00-1.00"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

            <TextView
                android:id="@+id/textViewcmt1303"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewcmt1301"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/CMT1301"
                android:paddingLeft="25dp"
                android:text="INR 569"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

            <TextView
                android:id="@+id/CMT1303"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/CMT1302"
                android:layout_marginTop="5dp"
                android:text="1.00-2.00"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

            <TextView
                android:id="@+id/textViewcmt1005"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewcmt1303"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/CMT1302"
                android:paddingLeft="25dp"
                android:text="INR 569"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

            <TextView
                android:id="@+id/CML1201"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/CMT1303"
                android:layout_marginTop="5dp"
                android:text="2.00-3.00"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                 />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewcmt1005"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/CML1201"
                android:paddingLeft="25dp"
                android:text="INR 569"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

            <TextView
                android:id="@+id/tv3_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/CML1201"
                android:layout_marginTop="5dp"
                android:text="3.00-4.00"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                />

            <TextView
                android:id="@+id/tv4_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv3_4"
                android:layout_marginTop="5dp"
                android:text="4.00-5.00"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                 />

            <TextView
                android:id="@+id/tv5_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv4_5"
                android:layout_marginTop="5dp"
                android:text="5.00-6.00"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                 />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>