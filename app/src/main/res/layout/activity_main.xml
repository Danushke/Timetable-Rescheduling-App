<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#219673"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/student"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:backgroundTint="#0EB102"
        android:text="Student"
        app:layout_constraintBottom_toTopOf="@+id/ar"
        app:layout_constraintEnd_toStartOf="@+id/lecture"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/non_acd"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#2196F3"
        android:layerType="software"
        android:shadowDx="3"
        android:shadowRadius="6"
        android:text="Non Acadamic"
        app:layout_constraintBottom_toBottomOf="@+id/ar"
        app:layout_constraintEnd_toEndOf="@+id/lecture"
        app:layout_constraintStart_toStartOf="@+id/lecture" />

    <Button
        android:id="@+id/ar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="172dp"
        android:backgroundTint="#D8ED04"
        android:text="AR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/student" />

    <Button
        android:id="@+id/lecture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#CF3066"
        android:text="Lecture"
        app:layout_constraintBottom_toBottomOf="@+id/student"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/student" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="LECTURE SHEDULING APP"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColorLink="@color/colorAccent"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.253" />

</androidx.constraintlayout.widget.ConstraintLayout>